@using System.Text.RegularExpressions
@using Infrastructure.HtmlHelpers
@{
    ViewBag.Title = "DatabaseBrowser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Database Browser</h2>

<table>
    @for (var i = 0; i < 5; i++)
    {
        var pageTitle = GathererGrab.GetPageTitle(String.Format("http://gatherer.wizards.com/Pages/Card/Details.aspx?multiverseid={0}", i));
        pageTitle = pageTitle.Remove(pageTitle.IndexOf("Gatherer"));
        if (!string.IsNullOrEmpty(pageTitle))
        {
            pageTitle = pageTitle.Remove(pageTitle.Length - 3);
            <tr>
                <td>@pageTitle</td>
            </tr>
        }
    }
</table>
