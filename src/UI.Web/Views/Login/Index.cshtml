@model UI.Web.ViewModels.Login.LoginViewModel

@section Title { @T.Login }
@section MainMenu {}
@section Footer {}

<div class="row">
    <div class="span4 offset4">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-lock"></i>
                <h3>Skaele Architecture - @T.Login</h3>
            </div>
            <div class="widget-content">
                        
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="control-group">
                        @Html.LabelFor(x => x.Email, (string)T.Email, new { @class = "control-label" })
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on">@@</span>
                                @Html.TextBoxFor(x => x.Email, new { @class = "span3", data_val = "true", data_val_required = T.Required, data_val_email = T.InvalidEmailAddress, placeholder = T.Email })
                                @Html.FocusFor(x=>x.Email)
                            </div>
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(x => x.Password, (string)T.Password, new { @class = "control-label" })
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                @Html.PasswordFor(x => x.Password, new { @class = "span3", data_val = "true", data_val_required = T.Required, placeholder = T.Password })
                            </div>
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn">@T.SignIn</button>
                    </div>
                    <div style="margin-top: 40px;">
                        <img src="~/Themes/Default/Images/blocks.png" alt=""/>
                        @Html.ActionLink((string)T.ResetPassword, "ResetPassword")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('form').defaultAjaxForm({
            success: function (data) {
                // On success the client would be redirected.
                // No redirect means the user credentials are not valid
                AddFlashMessage('Error', data.message, 'error');
            },
            error: function () {
                AddFlashMessage('Error', 'Server error', 'error');
            }
        });
    });
</script>
