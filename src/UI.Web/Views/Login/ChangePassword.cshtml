@model UI.Web.ViewModels.Login.ChangePasswordViewModel

@section Title { @T.ChangePassword }
@section MainMenu {}
@section Footer {}

<div class="row">
    <div class="span4 offset4">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-lock"></i>
                <h3>Skaele Architecture - @T.ChangePassword</h3>
            </div>
            <div class="widget-content">
                        
                @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
                {
                    @Html.HiddenFor(x=>x.UserId)
                    @Html.HiddenFor(x=>x.Hash)
                    <div class="control-group">
                        @Html.LabelFor(x => x.Password, (string)T.Password, new { @class = "control-label" })
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                @Html.PasswordFor(x => x.Password, new { @class = "span3", data_val = "true", data_val_required = T.Required, placeholder = T.Password })
                                @Html.FocusFor(x=>x.Password)
                            </div>
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(x => x.RepeatPassword, (string)T.RepeatPassword, new { @class = "control-label" })
                        <div class="controls">
                            <div class="input-prepend">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                @Html.PasswordFor(x => x.RepeatPassword, new { @class = "span3", data_val = "true", data_val_required = T.Required, placeholder = T.RepeatPassword, data_val_equalto = T.PasswordsDoNotMatch, data_val_equalto_other = "Password" })
                            </div>
                            @Html.ValidationMessageFor(x => x.RepeatPassword)
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn">@T.Send</button>
                    </div>
                    <div style="margin-top: 40px;">
                        <img src="~/Themes/Default/Images/blocks.png" alt=""/>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('form').defaultAjaxForm({
            success: function (data) {
                // On success the client would be redirected.
                // No redirect means the user credentials are not valid
                AddFlashMessage('Error', data.message, 'error');
            },
            error: function () {
                AddFlashMessage('Error', 'Server error', 'error');
            }
        });
    });
    
    
</script>
